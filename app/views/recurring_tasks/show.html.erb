<div class="contextual">
    <%= link_to(l(:label_add_recurring_task), {:action => 'new'}, :class => 'icon icon-add') %>
</div>

<h2><%= @recurring_task.issue.nil? ? l(:label_recurring_task_issue_empty) : link_to(@recurring_task.issue.subj_date, {:controller => 'issues', :action => 'show', :id => @recurring_task.issue.id}) %></h2>
 
<p><%= l(:label_recurrence_pattern) %> <%= pluralize(@recurring_task.interval_number, @recurring_task.interval_unit) %></p>
<p><%= @recurring_task.fixed_schedule ? l(:label_recurs_fixed) : l(:label_recurs_dependent) %></p>

<p><%= l(:label_next_scheduled_run) %>: <%= l(@recurring_task.next_scheduled_recurrence) %></p>

<p><%= button_to(l(:button_edit), {:action => 'edit', :id => @recurring_task}, :class => 'icon icon-edit')%></p>
<p><%= button_to(l(:button_delete), {:action => 'destroy', :id => @recurring_task}, :method => :delete, :class => 'icon icon-del', :confirm => l(:text_are_you_sure)) %></p>

